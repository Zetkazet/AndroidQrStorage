<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StockInPhp">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="76dp"
        android:layout_height="22dp"
        android:layout_marginStart="88dp"
        android:layout_marginBottom="12dp"
        android:text="ProductID"
        app:layout_constraintBottom_toTopOf="@+id/pidtextview"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/pidtextview"
        android:layout_width="200dp"
        android:layout_height="32dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="116dp"
        android:text="PID"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginBottom="16dp"
        android:text="Product Names"
        app:layout_constraintBottom_toTopOf="@+id/pnmtextview"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/pnmtextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginTop="60dp"
        android:text="PNM"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pidtextview" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginBottom="20dp"
        android:text="Quantity"
        app:layout_constraintBottom_toTopOf="@+id/ProductQuantity"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/ProductQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginTop="64dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pnmtextview" />

    <Button
        android:id="@+id/sendbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="148dp"
        android:layout_marginTop="56dp"
        android:text="send"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ProductQuantity" />
</androidx.constraintlayout.widget.ConstraintLayout>